<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imagesAdapter"
            type="iti.workshop.admin.presentation.features.product.ui.adapters.ProductImagesAdapter" />

        <variable
            name="variantAdapter"
            type="iti.workshop.admin.presentation.features.product.ui.adapters.ProductVariantsAdapter" />

        <variable
            name="viewModel"

            type="iti.workshop.admin.presentation.features.product.viewModel.ProductViewModel" />
        <variable
            name="dataModel"
            type="iti.workshop.admin.data.dto.Product" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Value"
                app:layout_constraintBottom_toTopOf="@+id/productVendorHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/productVendorHolder"
                app:layout_constraintTop_toBottomOf="@+id/productTitleHolder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/value_input"
                    android:text="@{dataModel.variants.get(0).price}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    app:endIconMode="clear_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bags"
                app:layout_constraintBottom_toTopOf="@+id/productTitleHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/productTitleHolder"
                app:layout_constraintTop_toTopOf="parent"
                app:thumbnail="@{dataModel.image.src}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addProductImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:drawableStart="@drawable/ic_camera"
                android:drawableTint="@color/white"
                android:padding="10dp"
                android:text=" Add Picture To Product"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/productImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/productImage"
                app:layout_constraintTop_toTopOf="@+id/productImage" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productTitleHolder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
                app:layout_constraintTop_toBottomOf="@+id/productImage">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productTitleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_regular"

                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:text="@={dataModel.body_html}"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productVendorHolder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vendor Name"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout6"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productVendorInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_regular"

                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:text="@={dataModel.body_html}"
                    android:textColor="@color/mainText"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Category Type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"            app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout5"
                app:layout_constraintTop_toBottomOf="@+id/productVendorHolder">

                <AutoCompleteTextView
                    android:id="@+id/categoryTypeInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textAutoComplete"
                    android:text="@{dataModel.tags}"
                    app:simpleItems="@array/product_categories" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:layout_constraintBottom_toTopOf="@+id/description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/description"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout6">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/productTypeInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{dataModel.product_type}"
                    android:inputType="textAutoComplete"
                    app:simpleItems="@array/product_types" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="@string/description"
                app:layout_constraintBottom_toTopOf="@+id/editVariantsAndImagesHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/editVariantsAndImagesHolder"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_variants"
                    android:fontFamily="@font/metropolis_regular"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:minLines="1"
                    android:text="@={dataModel.body_html}"
                    android:textColor="@color/mainText"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:id="@+id/editVariantsAndImagesHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayout9"
                app:layout_constraintTop_toBottomOf="@+id/description">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addProductImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg3"
                    android:drawableStart="@drawable/ic_camera"
                    android:drawableTint="@color/black"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text=" Add Some Pictures To Product"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="91dp"
                    tools:layout_editor_absoluteY="735dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="10dp"
                    android:id="@+id/addProductVariants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg3"
                    android:drawableStart="@drawable/ic_variants"
                    android:drawableTint="@color/black"
                    android:padding="10dp"
                    android:text=" Add Some Variants To Product"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="874dp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/action_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="addProductImages,addProductVariants"
                tools:ignore="NotSibling" />


            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/saveActionBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/saveActionBtn"
                app:layout_constraintTop_toBottomOf="@+id/editVariantsAndImagesHolder">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:id="@+id/variantRecyclerHolder">
                   <LinearLayout
                       android:layout_margin="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_weight="1"
                           style="@style/sub_title"
                           android:drawableTint="@color/primary"
                           android:drawableStart="@drawable/ic_variants"
                           android:layout_margin="3dp"
                           android:gravity="start|center_vertical"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text="Product Variants"/>
                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/addVariantAction"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/btn_bg3"
                           android:drawableStart="@drawable/ic_variants"
                           android:drawableTint="@color/black"
                           android:padding="10dp"
                           android:layout_margin="10dp"
                           android:text=" Add Variant"
                           android:textColor="@color/black" />



                   </LinearLayout>
                   <LinearLayout
                       android:gravity="center"
                       android:id="@+id/recycler_view_holder"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">


                       <LinearLayout
                           android:id="@+id/nothing_data_response"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:visibility="gone">

                           <include layout="@layout/utils_no_data_view_lottie" />
                       </LinearLayout>

                       <androidx.recyclerview.widget.RecyclerView

                           android:id="@+id/recycler_view"
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="1"
                           android:adapter="@{variantAdapter}"
                           android:orientation="horizontal"
                           app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                           app:spanCount="1"
                           tools:listitem="@layout/product_item_variant">

                       </androidx.recyclerview.widget.RecyclerView>
                   </LinearLayout>
               </LinearLayout>


               <LinearLayout
                   android:id="@+id/imageRecyclerHolder"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_margin="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           style="@style/sub_title"
                           android:drawableTint="@color/primary"
                           android:drawableStart="@drawable/ic_images"
                           android:gravity="start|center_vertical"
                           android:layout_weight="1"
                           android:layout_width="wrap_content"
                           android:layout_height="match_parent"
                           android:text=" Product Images"/>

                       <androidx.appcompat.widget.AppCompatButton
                           android:id="@+id/addPictureAction"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/btn_bg3"
                           android:drawableStart="@drawable/ic_camera"
                           android:drawableTint="@color/black"
                           android:padding="10dp"
                           android:layout_margin="10dp"
                           android:text=" Add Picture"
                           android:textColor="@color/black" />

                   </LinearLayout>
                   <LinearLayout
                       android:gravity="center"
                       android:id="@+id/recycler_view_holder_image"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <LinearLayout
                           android:id="@+id/nothing_data_response_image"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:visibility="gone">

                           <include layout="@layout/utils_no_data_view_lottie" />
                       </LinearLayout>

                       <androidx.recyclerview.widget.RecyclerView

                           android:id="@+id/recycler_view_image"
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="1"
                           android:adapter="@{imagesAdapter}"
                           android:orientation="horizontal"
                           app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                           app:spanCount="1"
                           tools:listitem="@layout/product_item_image">

                       </androidx.recyclerview.widget.RecyclerView>
                   </LinearLayout>
               </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_margin="30dp"
                android:id="@+id/saveActionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="@string/save_product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>